<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="org.akanework.gramophone.ui.fragments.ViewPagerContainerFragment" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hide_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HS"
        android:layout_gravity="center_vertical"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textColor="?colorOnSurface"
        app:backgroundTint="?colorSurfaceContainerHigh"
        app:cornerRadius="4dp"
        app:elevation="0dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/show_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SS"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textColor="?colorOnSurface"
        app:backgroundTint="?colorSurfaceContainerHigh"
        app:cornerRadius="4dp"
        app:elevation="0dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/show_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SA"
        android:layout_gravity="center_vertical|end"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textColor="?colorOnSurface"
        app:backgroundTint="?colorSurfaceContainerHigh"
        app:cornerRadius="4dp"
        app:elevation="0dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hide_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HA"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:layout_gravity="center|end"
        android:layout_marginBottom="128dp"
        android:textColor="?colorOnSurface"
        app:backgroundTint="?colorSurfaceContainerHigh"
        app:cornerRadius="4dp"
        app:elevation="0dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/hide_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HN"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="128dp"
        android:textColor="?colorOnSurface"
        app:backgroundTint="?colorSurfaceContainerHigh"
        app:cornerRadius="4dp"
        app:elevation="0dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/show_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SN"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginBottom="128dp"
        android:textColor="?colorOnSurface"
        app:backgroundTint="?colorSurfaceContainerHigh"
        app:cornerRadius="4dp"
        app:elevation="0dp"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/bottom_nav_height"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_app_bar"
        app:labelVisibilityMode="unlabeled"
        app:backgroundTint="?colorSurfaceContainerLow"
        app:itemPaddingBottom="0dp"
        app:itemPaddingTop="0dp"
        />

    <org.akanework.gramophone.ui.components.BottomSheet
        android:id="@+id/standard_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:marginLeftSystemWindowInsets="false"
        app:marginRightSystemWindowInsets="false"
        app:paddingBottomSystemWindowInsets="false"
        app:behavior_hideable="true"
        app:layout_behavior="org.akanework.gramophone.logic.ui.CustomBottomSheetBehavior"
        app:behavior_peekHeight="0dp"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>