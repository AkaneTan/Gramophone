<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/security_icon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/ic_security"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?colorPrimary"
        />

    <TextView
        android:id="@+id/permission_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/we_need_some_permissions"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:textSize="32sp"
        android:textColor="?colorOnSurface"
        android:fontFamily="@font/gsans"
        android:textFontWeight="500"
        app:layout_constraintTop_toBottomOf="@id/security_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/permission_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/permission_desc"
        android:textColor="?colorOnSurface"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/permission_label"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/music_permission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_card"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/permission_desc">

        <ImageView
            android:id="@+id/audio_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_local_library"
            android:layout_marginStart="24dp"
            android:layout_marginVertical="24dp"
            app:tint="?colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/audio_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/audio_permission"
            android:textColor="?colorOnSurface"
            android:textSize="16sp"
            android:textFontWeight="500"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/audio_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/audio_badge_desc"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/audio_badge_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/audio_badge_desc"
            android:textColor="?colorOnSurfaceVariant"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/audio_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/audio_badge"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="20dp"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            app:tint="?colorOnSurface"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notification_permission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_card"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/music_permission">

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_notifications"
            android:layout_marginStart="24dp"
            android:layout_marginVertical="24dp"
            app:tint="?colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/notification_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_permission"
            android:textColor="?colorOnSurface"
            android:textSize="16sp"
            android:includeFontPadding="false"
            android:textFontWeight="500"
            app:layout_constraintStart_toEndOf="@id/notification_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/notification_badge_desc"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="24dp"
            />

        <TextView
            android:id="@+id/notification_badge_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_badge_desc"
            android:textColor="?colorOnSurfaceVariant"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/notification_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notification_badge"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="24dp"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            app:tint="?colorOnSurface"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pic_permission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_card"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notification_permission">

        <ImageView
            android:id="@+id/pic_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_photo_library"
            android:layout_marginStart="24dp"
            android:layout_marginVertical="24dp"
            app:tint="?colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/pic_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pic_permission"
            android:textColor="?colorOnSurface"
            android:textSize="16sp"
            android:includeFontPadding="false"
            android:textFontWeight="500"
            app:layout_constraintStart_toEndOf="@id/pic_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pic_badge_desc"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="24dp"
            />

        <TextView
            android:id="@+id/pic_badge_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pic_badge_desc"
            android:textColor="?colorOnSurfaceVariant"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/pic_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pic_badge"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="24dp"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            app:tint="?colorOnSurface"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>