<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/settings_preference_category_application"
        android:layout="@layout/preference_category_md">
        <DropDownPreference
            android:defaultValue="0"
            android:entries="@array/theme_switch"
            android:entryValues="@array/theme_switch_val"
            android:key="theme_mode"
            android:layout="@layout/icon_dropdown_preference"
            android:title="@string/settings_app_theme"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="oled"
            android:layout="@layout/icon_switch_preference"
            android:summary="@string/settings_oled_summary"
            android:title="@string/settings_oled" />
    </PreferenceCategory>
</PreferenceScreen>